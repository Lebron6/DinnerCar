<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:id="@+id/view_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_margin_top"
        android:layout_alignParentTop="true"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/titlebar" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBGGray"
        android:gravity="center_horizontal"
        android:orientation="vertical">
<LinearLayout
    android:layout_marginTop="1dp"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="189dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_can_money"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥177.00"
                android:textColor="@color/colorMain"
                android:textSize="30sp"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可提现金额"
                android:textColor="@color/colorTextGray"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_apply_draw_cash"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:text="申请提现"
                android:textSize="16sp"
                android:background="@drawable/small_red_circle"
                android:layout_width="124dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号余额："
                android:textColor="@color/colorTextGray"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_account_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000.00元"
                android:textColor="@color/colorMain"
                android:textSize="12sp"
                /></LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现周期："
                    android:textColor="@color/colorTextGray"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tv_cycle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T+1"
                    android:textColor="@color/colorMain"
                    android:textSize="12sp"
                    /></LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="管理费用："
                    android:textColor="@color/colorTextGray"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tv_mang_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000.00元"
                    android:textColor="@color/colorMain"
                    android:textSize="12sp"
                    /></LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="费用扣除日期："
                    android:textColor="@color/colorTextGray"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tv_deduction_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T+1"
                    android:textColor="@color/colorMain"
                    android:textSize="12sp"
                    /></LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
        <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/sv_pur"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<android.support.v7.widget.RecyclerView
    android:id="@+id/rv_fina_stat"
    android:background="@color/colorWhite"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView></com.liaoinstan.springview.widget.SpringView>
    </LinearLayout>
</LinearLayout>
