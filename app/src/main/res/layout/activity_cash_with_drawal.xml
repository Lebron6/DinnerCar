<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:id="@+id/view_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_margin_top"
        android:layout_alignParentTop="true"
        android:visibility="visible" />

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBGGray"
        android:orientation="vertical">

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_item_order">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到帐银行卡"
                android:textColor="#ff2b2c44"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_bank_num"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="465464654654654"
                android:textColor="#ff2b2c44"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_item_order"
            android:orientation="vertical">
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现金额（元）"
                    android:textColor="#ff2b2c44"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tv_tax_rate"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:text="提现税率：3%"
                    android:textColor="#ff9e9fb5"
                    android:textSize="12sp"
                    />
            </RelativeLayout>
            <EditText
                android:paddingLeft="10dp"
android:id="@+id/et_cash_num"
                android:hint="请输入提现金额"
                android:textSize="25sp"
                android:inputType="number"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorTextGray"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_can_cash_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可提现金额：1321.00元"
                    android:textColor="#ff9e9fb5"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tv_cash_all"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部提现"
                    android:textColor="#ff2f8aff"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_apply_draw_cash"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="提现"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/small_red_circle"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>

</LinearLayout>
