<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBGGray"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_ov"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="口味1"
        android:textColor="#ff9c9db3"
        android:textSize="14sp"
        />
<LinearLayout
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/bg_item_order"
    android:layout_width="match_parent"
    android:layout_height="166dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="口味名称"
            android:textColor="@color/colorMain"
            android:textSize="14sp"
            />
        <EditText
            android:id="@+id/tv_flavor_name"
            android:paddingRight="10dp"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="@color/colorMain"
            android:layout_marginLeft="15dp"
            android:hint="例：辣度、甜度"
            android:textColorHint="@color/colorLine"
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="@color/colorLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">
        <TextView
            android:id="@+id/txt_flavor_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="口味选项"
            android:layout_centerVertical="true"
            android:textColor="@color/colorMain"
            android:textSize="14sp"
            />
        <EditText
            android:id="@+id/et_flavor_type"
            android:paddingRight="10dp"
            android:background="@null"
            android:layout_toLeftOf="@+id/iv_add"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/txt_flavor_type"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/colorMain"
            android:layout_marginLeft="15dp"
            android:textColorHint="@color/colorLine"
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_add"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_m_add"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/colorLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_flavor"
            android:layout_width="wrap_content"
            android:layout_height="22dp"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>
</LinearLayout>
