<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_dish_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="85dp">
<ImageView
    android:id="@+id/iv_pic"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="5dp"
    android:layout_gravity="center_vertical"
    android:layout_width="70dp"
    android:layout_height="70dp" />
<LinearLayout
    android:gravity="center_vertical"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"   android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/right_dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:textColor="@color/colorMain"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_spec"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorLine"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="11sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom"
            android:id="@+id/right_dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥5"
            android:textColor="@color/colorBGItemLeft"
            android:textSize="16sp"
            />
        <ImageView
            android:layout_toLeftOf="@+id/right_dish_account"
            android:layout_marginRight="10dp"
            android:id="@+id/right_dish_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@mipmap/icon_reduce" />
        <TextView
            android:layout_toLeftOf="@+id/right_dish_add"
            android:layout_marginRight="10dp"
            android:id="@+id/right_dish_account"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="1"
            android:textSize="16sp"
            android:textColor="@color/colorBlack" />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/right_dish_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@mipmap/icon_add" />
    </RelativeLayout>
</LinearLayout>

</LinearLayout>