<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_dish_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

   <RelativeLayout
       android:background="@drawable/bg_item_order"
       android:layout_width="245dp"
       android:layout_height="152dp">
       <LinearLayout
           android:id="@+id/layout_top"
           android:gravity="center_vertical"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="117dp">
           <ImageView
               android:id="@+id/iv_goods_pic"
               android:layout_marginLeft="10dp"
               android:layout_width="72dp"
               android:layout_height="72dp" />
           <LinearLayout
               android:orientation="vertical"
               android:gravity="center_vertical"
               android:layout_marginLeft="10dp"
               android:layout_width="wrap_content"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/tv_goods_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="商品名称"
                   android:textStyle="bold"
                   android:textColor="@color/colorMain"
                   android:textSize="16sp"
                   />
               <TextView
                   android:id="@+id/tv_goods_kc"
                   android:layout_marginTop="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="库存：1024"
               android:textColor="#ff3d3e5a"
               android:textSize="12sp"
               />
               <TextView
                   android:id="@+id/tv_goods_ys"
                   android:layout_marginTop="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="月售：1024"
                   android:textColor="#ff3d3e5a"
                   android:textSize="12sp"
                   />
               <TextView
                   android:id="@+id/tv_goods_price"
                   android:layout_marginTop="3dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="￥5"
                   android:textColor="#fffb4e44"
                   android:textSize="16sp"
                   />
           </LinearLayout>
       </LinearLayout>
       <View
           android:layout_below="@+id/layout_top"
           android:background="@color/colorLine"
           android:layout_width="match_parent"
           android:layout_height="0.5dp"/>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_alignParentBottom="true"
           android:layout_width="match_parent"
           android:layout_height="34dp">
           <TextView
               android:id="@+id/tv_goods_down"
               android:gravity="center"
               android:layout_width="0dp"
               android:textSize="14sp"
               android:layout_weight="1"
               android:text="下架"
               android:layout_height="match_parent" />
           <View
               android:layout_width="0.5dp"
               android:background="@color/colorLine"
               android:layout_height="match_parent"/>
           <TextView
               android:id="@+id/tv_goods_edit"
               android:gravity="center"
               android:layout_width="0dp"
               android:textSize="14sp"
               android:layout_weight="1"
               android:text="编辑"
               android:layout_height="match_parent" />
           <View
               android:layout_width="0.5dp"
               android:background="@color/colorLine"
               android:layout_height="match_parent"/>
           <TextView
               android:id="@+id/tv_goods_delete"
               android:gravity="center"
               android:layout_width="0dp"
               android:textSize="14sp"
               android:layout_weight="1"
               android:text="删除"
               android:layout_height="match_parent" />
       </LinearLayout>
   </RelativeLayout>
</LinearLayout>